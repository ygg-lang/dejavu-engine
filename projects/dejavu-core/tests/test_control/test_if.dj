# simple if elements
{% if true %}
   if text
{% end %}

# if else element
# simple if elements
{% if true %}
   if text
{% else %}
   else text
{% end %}


# if-else-if element
# simple if elements
{% if true %}
   if text
{% else if false %}
   else if text
{% end %}

# if-else-if element
# simple if elements
{% if true %}
   if text
{% else if false %}
   else if text
{% else %}
   else text
{% end %}