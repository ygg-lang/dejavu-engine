# simple if elements
{% if true %}
   if text
{% end %}

# if-else element
{% if true %}
   if text
{% else %}
   else text
{% end %}


# if-else-if element
{% if true %}
   if text
{% else if false %}
   else if text
{% end %}

# if-else-if element
{% if true %}
   if text
{% else if false %}
   else if text
{% else %}
   else text
{% end %}

# nested if statement
{% if true %}
    term 1
    {% if false %}
       term 2
    {% end %}
    term 3
{% end %}